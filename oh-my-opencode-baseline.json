{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "google_auth": false,
  "sisyphus_agent": {
    "disabled": false,
    "default_builder_enabled": true,
    "planner_enabled": true,
    "replace_plan": true
  },
  "git_master": {
    "commit_footer": false,
    "include_co_authored_by": false
  },
  "agents": {
    "build": {
      "model": "anthropic/claude-opus-4-5-20251101"
    },
    "plan": {
      "model": "anthropic/claude-opus-4-5-20251101"
    },
    "Sisyphus": {
      "model": "anthropic/claude-opus-4-5-20251101",
      "prompt_append": "ALWAYS USE THE QUESTION TOOL IF YOU NEED TO ASK USER.",
      "permission": { "question": "allow" }
    },
    "Sisyphus-Junior": {
      "model": "anthropic/claude-sonnet-4-5-20251022"
    },
    "OpenCode-Builder": {
      "model": "anthropic/claude-opus-4-5-20251101"
    },
    "Prometheus (Planner)": {
      "model": "anthropic/claude-opus-4-5-20251101",
      "prompt_append": "ALWAYS USE THE QUESTION TOOL IF YOU NEED TO ASK USER.",
      "permission": { "question": "allow" }
    },
    "Metis (Plan Consultant)": {
      "model": "openai/gpt-5.2",
      "prompt_append": "ALWAYS USE THE QUESTION TOOL IF YOU NEED TO ASK USER.",
      "permission": { "question": "allow" }
    },
    "Momus (Plan Reviewer)": {
      "model": "openai/gpt-5.2"
    },
    "orchestrator-sisyphus": {
      "model": "anthropic/claude-opus-4-5-20251101",
      "prompt_append": "ALWAYS USE THE QUESTION TOOL IF YOU NEED TO ASK USER.",
      "permission": { "question": "allow" }
    },
    "oracle": {
      "model": "openai/gpt-5.2"
    },
    "librarian": {
      "model": "anthropic/claude-opus-4-5-20251101"
    },
    "explore": {
      "model": "anthropic/claude-haiku-4-5-20251001"
    },
    "frontend-ui-ux-engineer": {
      "model": "quotio/gemini-3-pro-preview"
    },
    "document-writer": {
      "model": "quotio/gemini-3-flash-preview"
    },
    "multimodal-looker": {
      "model": "anthropic/claude-opus-4-5-20251101"
    }
  },
  "categories": {
    "visual-engineering": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.7 },
    "ultrabrain": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.1 },
    "artistry": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.9 },
    "quick": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.3 },
    "most-capable": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.1 },
    "writing": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.5 },
    "business-logic": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.1 },
    "general": { "model": "anthropic/claude-opus-4-5-20251101", "temperature": 0.3 }
  }
}
